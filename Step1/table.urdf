<?xml version="1.0"?>
<robot name="table">

  <!-- define the colors -->
<material name="brown">
    <color rgba="0.54 0.27 0.07 1.0"/>
</material>
<material name="light_grey">
    <color rgba="0.8 0.8 0.8 1.0"/>
</material>
  
  <!-- create link fixed to the "world" -->
  <link name="world" />

  <!-- joint from "world" to "base_link"-->
  <joint name="base_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="world" />
    <child link="base_link" />
  </joint>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 1.0" />
      <geometry>
        <box size="0.05 0.05 2" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link" />
    <child link="link1" />
    <!-- offset by 5cm in y axis -->
    <origin rpy="0 0 0" xyz="0 0.05 1.95" />
    <axis xyz="0 1 0" />
    <limit  lower="-1.57" upper="1.57" effort="1" velocity="1" />
  </joint>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.45" />
      <geometry>
        <box size="0.05 0.05 1" />
      </geometry>
      <material name="red" />
    </visual>
  </link>

  <!-- Joint 2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1" />
    <child link="link2" />
    <!-- offset by 5cm in y axis -->
    <origin rpy="0 0 0" xyz="0 0.05 0.9" />
    <axis xyz="0 1 0" />
    <limit  lower="-1.57" upper="1.57" effort="1" velocity="1" />
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.45" />
      <geometry>
        <box size="0.05 0.05 1" />
      </geometry>
      <material name="green" />
    </visual>
  </link>

  <!-- Joint 3 -->
   <joint name="joint3" type ="revolute">
    <parent link='link2'/>
    <child link='link3'/>
    <!-- offset by __ in y axis-->
    <origin rpy="0 0 0" xyz="0 .05 0.9"/>
    <axis xyz="0 1 0"/>
    <limit  lower="-1.57" upper="1.57" effort="1" velocity="1" />
   </joint>

  <!-- Link 3 -->
   <link name="link3">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 .2"/>
        <geometry>
          <box size="0.05 0.05 .5"/>
        </geometry>
        <material name='blue'/>
      </visual>
   </link>

  <!-- joint from link2 to tool0 -->
  <joint name="tool_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.45" />
    <parent link="link3" />
    <child link="tool0" />
  </joint>

  <!-- Tool Link -->
  <link name="tool0" />
  
</robot>