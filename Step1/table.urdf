<?xml version="1.0"?>
<robot name="table">

  <!-- define the colors -->
  <material name="brown">
    <color rgba="0.54 0.27 0.07 1.0"/>
  </material>
  <material name="light_grey">
    <color rgba="0.8 0.8 0.8 1.0"/>
  </material>

  <!-- create link fixed to the "world" -->
  <link name="world" />

  <!-- joint from "world" to leg1"-->
  <joint name="base_leg1_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 -1 0" />
    <parent link="world" />
    <child link="leg1" />
  </joint>

  <!-- Leg1 Link -->
  <link name="leg1">
    <visual>
      <origin rpy="0 0 0" xyz=".5 -1 0.475" />
      <geometry>
        <cylinder radius="0.05" length="0.95" />
      </geometry>
      <material name="brown" />
    </visual>
  </link>
  
</robot>